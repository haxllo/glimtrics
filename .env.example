# Database (Supabase)
# Connection pooling URL (use this for queries) - MUST include pgbouncer=true&connection_limit=1
DATABASE_URL="postgresql://user:password@host:port/database?pgbouncer=true&connection_limit=1"
# Direct connection URL (use this for migrations)
DIRECT_URL="postgresql://user:password@host:port/database"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_ID=""
GITHUB_SECRET=""

# OpenAI API
OPENAI_API_KEY="sk-..."

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File Upload (UploadThing v7+)
# Get your token from: https://uploadthing.com/dashboard
# Note: No quotes needed around the token
UPLOADTHING_TOKEN=

# AI Features (OpenAI)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Stripe (Payment Processing)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=
NEXT_PUBLIC_STRIPE_BUSINESS_PRICE_ID=

# Email (Resend/Postmark)
RESEND_API_KEY=""
# or
POSTMARK_API_KEY=""
